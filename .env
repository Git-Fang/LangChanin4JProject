# ====== 数据库配置（推荐使用默认值） ======
# MySQL 数据库 URL
DB_URL=jdbc:mysql://mysql:3306/rag_translation?useUnicode=true&characterEncoding=utf-8&useSSL=false&serverTimezone=Asia/Shanghai
DB_USERNAME=root
DB_PASSWORD=root

# MongoDB URL
MONGO_URL=mongodb://mongo:27017
MONGO_DATABASE=chat_db

# ====== Redis 配置（推荐使用默认值） ======
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ====== Qdrant 向量数据库配置 ======
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=

# ====== 服务配置 ======
SERVER_PORT=8000
SERVER_ADDRESS=0.0.0.0

# ====== JVM 优化配置（可选） ======
# 内存设置
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC -XX:+UseStringDeduplication

# ====== 日志级别配置 ======
# 可选值: ERROR, WARN, INFO, DEBUG
LOG_LEVEL=INFO

# ====== API超时配置 ======
# 翻译服务超时时间（秒）
TRANSLATION_TIMEOUT=180

# MCP聊天服务超时时间（秒）
MCP_TIMEOUT=180

# ====== 备份配置 ======
# 是否自动备份（true/false）
AUTO_BACKUP=false

# 备份路径
BACKUP_PATH=./backups

# 备份保留天数
BACKUP_RETENTION_DAYS=7